<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<File name="LogFile" fileName="LogFile.log">
			<PatternLayout>
				<Pattern>%d %p %C{1.} [%t] %m%n</Pattern>
			</PatternLayout>
		</File>
	</Appenders>
	<Loggers>
		<Root level="error">
			<AppenderRef ref="LogFile" />
		</Root>
		<Logger name="danielh1307.jee.example.server.status.service" level="error" additivity="false">
			<AppenderRef ref="LogFile" />
		</Logger>
	</Loggers>
</Configuration>